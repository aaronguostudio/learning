@import './reset.styl'
@import './vars.styl'
@import './common.styl'

.a-container
  padding-top: $menuHeight
.a-banner
  height 400px
  background-color: $light
.nuxt-link-active
  position relative
  color $primary
  font-weight 600
  &:after
    position absolute
    left 7px
    bottom: -3px
    content ''
    width calc(100% - 16px)
    height 2px
    background-color: $primary