// app global css
@import './a-overwrite'
@import './a-layout'
@import './a-common'
@import './a-text'
@import './a-border'
@import './a-animate'

html, body, #q-app, .q-layout, .q-layout-page-container,
.q-layout-page, .q-infinite-scroll-content, .q-infinite-scroll,
.main-container
  width 100%
.content-container
  margin-top: 50px
  width: 100%
  height calc(100% - 50px)
  overflow: auto

.q-infinite-scroll-content
  width 100%
.full-width
  width: 100%
.inner-toolbar
  border-bottom: 1px solid $blue-grey-2
  position: absolute

.q-table
  width: 100%
  height 100%
  overflow auto

.input-group, .form-group
  .q-input, .q-select, .input-group-item, .q-toggle
    margin-top: 1rem

.c-modal-container
  .title
    font-size: 1.4rem
    font-weight: 700
  .btn-container
    margin-top: 1rem

.a-title-md
  font-size: 20px

.a-title-lg
  font-size: 24px

.a-title-xg
  font-size: 30px

.a-cursor
  cursor pointer

.a-divider
  width 100%
  height 1px
  background-color $grey-3

.a-hide-sm
  display block
.a-show-sm
  display none

.a-hide-md
  display block
.a-show-md
  display none

.a-content-600
  width: 100%
  max-width 600px

.a-content-1000
  width: 100%
  max-width 1000px

.a-content-1200
  width: 100%
  max-width 1200px

.a-radius-4px
  border-radius: 4px

.a-radius-50
  border-radius: 50%

.a-shadow-bg
  box-shadow: 0px 0px 50px 5px rgba(0,0,0,0.12);

.a-flex-1
  flex 1

.a-pb-100
  padding-bottom: 100px

.a-btn-lg
  height 46px
  font-size: 16px

@media screen and (max-width: 600px)
  .a-hide-sm
    display: none
  .a-show-sm
    display: block

@media screen and (max-width: 1000px)
  .a-hide-md
    display: none
  .a-show-md
    display: block

