// overwrite quasar default styles
.q-card, .q-table-container, .q-layout-header
  box-shadow: 0 0px 0px rgba(0,0,0,0.2), 0 1px 1px rgba(0,0,0,0.14), 0 1px 1px -2px rgba(0,0,0,0.12)
.q-card, .q-table-container
  background-color: #FFF
.q-btn
  box-shadow: none
  padding 4px 8px
.q-btn-round:not(.q-btn-flat):not(.q-btn-outline)
  box-shadow: none
.q-item
  padding 8px 10px
.q-btn .q-icon
  font-size: 1.1rem
.c-sequence-container
  .q-item-avatar
    img
      width: 38px
      height 38px
.c-sequence-container
  .q-item-letter
    width: 38px
    height 38px
    background-color: #d7e8f5
    border-radius: 50%
    line-height: 38px
    text-align: center
    color: black
    font-size: 1.1rem
  .q-item-side-left
    height 39px

.q-layout-drawer
  .q-list
    .q-item
      .q-item-side
        text-align: center

.table-sortable-toggle
  .q-radial-ripple
      height 0 !important


.q-toggle
  .q-option-inner
    margin-left: 1rem

.q-chip-small
  min-height: 20px
  margin-left: .5rem

.q-if-addon-left
  padding-left: 5px

