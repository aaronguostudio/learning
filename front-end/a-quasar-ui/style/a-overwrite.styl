.q-btn-inner
  .on-left
    margin-right: 6px

.q-chip-left
  margin-left: -8px;
  margin-right: 0;
.q-chip .q-icon
  font-size: 18px
.q-collapsible-sub-item
  padding: 8px
.q-if-label
  top: 0
