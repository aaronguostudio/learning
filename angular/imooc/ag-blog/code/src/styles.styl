@import "~@angular/material/prebuilt-themes/indigo-pink.css";

// global reset
html, body, app-root, .site
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  min-width: 320px
  max-width: 2600px
  margin-left: auto
  margin-right: auto
  font-family: Roboto,"Helvetica Neue",sans-serif;
  background-color: #e5e5e5

.active
  position relative
  &:before
    content: ''
    position absolute
    right 0
    width 2px
    height 100%
    background-color #3f51b5

.site
  display flex
  flex-direction: column

.site-name
  margin-left: 15px
.main
  flex: 1
  display: flex
  flex-direction: row
  flex-wrap: wrap
  .sidebar
    width: 240px
  // .content
  //   height 100%


// common styles
// layout
.flex
  display: flex
.flex-center
  display: flex
  justify-content: center
  align-items: center
.row
  display: flex
  flex-direction: row
.column
  display: flex
  flex-direction: column
.between
  display: flex
  justify-content: space-between
.items-center
  align-items: center

.full-width
  width: 100%
.full-height
  height 100%

.a-pa-md
  padding: 10px

.a-mt-xs
  margin-top: 4px
.a-mt-sm
  margin-top: 6px
.a-mt-md
  margin-top: 10px
.a-mt-lg
  margin-top: 15px
.a-mt-xl
  margin-top: 20px

.a-ml-md
  margin-left: 10px
.a-ml-lg
  margin-left: 15px
.a-ml-xl
  margin-left: 20px

.a-mr-md
  margin-right: 10px
.a-mr-lg
  margin-right: 15px
.a-mr-xl
  margin-right: 20px


// theme
.text-grey
  color #999

.tx-center
  text-align: center

.square
  width: 100px
